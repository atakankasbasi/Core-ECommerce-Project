@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h1>Kullanıcı Listesi</h1>

<table class="table table-hover" >
    <tr>
        <th style=" text-align: center; vertical-align: middle; ">#</th>
        <th style=" text-align: center; vertical-align: middle; ">Ad</th>
        <th style=" text-align: center; vertical-align: middle; ">Soyad</th>
        <th style=" text-align: center; vertical-align: middle; ">Şehir</th>
        <th style=" text-align: center; vertical-align: middle; ">Detaylar</th>
        <th style=" text-align: center; vertical-align: middle; ">Sil</th>
        <th style=" text-align: center; vertical-align: middle; ">Güncelle</th>
        <th style=" text-align: center; vertical-align: middle; ">Roller</th>
    </tr>
    @foreach (var item in Model)
   {
        <tr >
            <td style=" text-align: center; vertical-align: middle;"><img src="@item.ImageUrl" style="width: 100px; height: 100px; border-radius: 50%;" /></td>
            <td style=" text-align: center; vertical-align: middle;">@item.Name</td>
            <td style=" text-align: center; vertical-align: middle;">@item.Surname</td>
            <td style=" text-align: center; vertical-align: middle;">@item.City</td>
            <td style=" text-align: center; vertical-align: middle;"><a href="#" class="btn btn-outline-dark">Detaylar</a></td>
            <td style=" text-align: center; vertical-align: middle;"><a href="#" class="btn btn-danger">Sil</a></td>
            <td style=" text-align: center; vertical-align: middle;"><a href="#" class="btn btn-outline-success">Güncelle</a></td>
            <td style=" text-align: center; vertical-align: middle;"><a href="/User/AssignRole/@item.Id" class="btn btn-outline-warning">Roller</a></td>
       </tr>
   }
</table>

